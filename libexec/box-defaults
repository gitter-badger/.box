#!/usr/bin/env bash
# Usage: box defaults
# Summary: configure machine with sensable default configuration
# Help: 
#
source "$_BOX_ROOT/lib/box_functions"
set -e

bot "BOXBOT!"
get_platform

bot "System Defaults"

if [ "$NS_PLATFORM" == "darwin" ]; then
  source "$_BOX_ROOT/lib/box-defaults/_darwin.sh"
fi

if [ "$NS_PLATFORM" == "linux" ]; then
	die 'implementation unfinished'
fi
